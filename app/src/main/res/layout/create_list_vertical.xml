<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/create_list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a list"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_list_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name list:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_list_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:text="Name your list" />

    </LinearLayout>

    <Button
        android:id="@+id/create_list_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="Create list"
        android:layout_below="@id/linearTop"/>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeScreenButton"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/round_shape"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo_home_foreground" />

            <ImageButton
                android:id="@+id/listAddButton"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="@color/light_gray"
                app:srcCompat="@android:drawable/ic_menu_add" />

            <ImageButton
                android:id="@+id/listViewButton"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="@color/light_gray"
                app:srcCompat="@android:drawable/ic_dialog_dialer" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>