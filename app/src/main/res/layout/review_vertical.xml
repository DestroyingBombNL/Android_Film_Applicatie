<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".presentation.ReviewMedia">


    <TextView
        android:id="@+id/review_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/review_img"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/review_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="0.5" />

    <EditText
        android:id="@+id/review_description_txt"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Description"
        android:inputType="textPersonName"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp" />

    <Button
        android:id="@+id/review_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review" />

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:background="#7A7A7A"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeScreenButton"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@mipmap/app_logo_foreground" />

            <ImageButton
                android:id="@+id/listAddButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@android:drawable/ic_menu_add" />

            <ImageButton
                android:id="@+id/listViewButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@android:drawable/ic_dialog_dialer" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>