<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        tools:targetApi="31" >
        <activity
            android:name=".presentation.SearchMedia"
            android:exported="false" />
        <activity
            android:name=".presentation.ShowMediaList"
            android:exported="false" />
        <activity
            android:name=".presentation.CreateMediaList"
            android:exported="false" />
        <activity
            android:name=".presentation.DetailsMedia"
            android:exported="false" />
        <activity
            android:name=".presentation.Homescreen"
            android:exported="false" />
        <activity
            android:name=".presentation.Login"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.Register" />
        <activity android:name=".presentation.ForgotPassword" />
    </application>

</manifest>